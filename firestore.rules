rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /rooms/{pairingCode} {
      // Require authentication for all operations
      // Allow authenticated users to create rooms
      allow create: if request.auth != null;
      
      // Allow authenticated users to read room metadata (to check if room exists)
      // This allows users to verify room existence before joining
      allow read: if request.auth != null;
      
      // Only authenticated users can update/delete rooms
      allow update, delete: if request.auth != null;

      match /devices/{deviceId} {
        // Require authentication to create devices
        allow create: if request.auth != null;
        
        // Authenticated users can read device data
        allow read: if request.auth != null;
        
        // Authenticated users can update/delete device data
        allow update, delete: if request.auth != null;
      }
    }

    // Allow Cloud Functions to read device data for FCM messaging
    match /rooms/{pairingCode}/devices/{deviceId} {
      allow read: if request.auth != null || resource.data.role == 'remote';
    }
  }
}
